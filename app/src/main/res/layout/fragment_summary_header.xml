<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_25"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_240"
        android:background="@color/colorHeaderToolbar"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/summary_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@color/colorHeaderBackgroundOverlay"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_25"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/summary_avatar"
                android:layout_width="@dimen/spacing_100"
                android:layout_height="@dimen/spacing_100"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="@dimen/spacing_2" />

            <TextView
                android:id="@+id/summary_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semi"
                android:text="@string/placeholder"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorHeaderSmallText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/spacing_15"
                    android:layout_height="@dimen/spacing_15"
                    android:layout_marginEnd="@dimen/spacing_5"
                    android:layout_marginRight="@dimen/spacing_35"
                    android:tint="@color/colorHeaderSmallText"
                    app:srcCompat="@drawable/ic_android" />

                <TextView
                    android:id="@+id/summary_android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semi"
                    android:textSize="@dimen/txt_16"
                    android:text="@string/placeholder"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorHeaderSmallText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_5"
                android:paddingTop="@dimen/spacing_5">

                <ImageView
                    android:layout_width="@dimen/spacing_15"
                    android:layout_height="@dimen/spacing_15"
                    android:layout_marginEnd="@dimen/spacing_5"
                    android:layout_marginRight="@dimen/spacing_35"
                    android:tint="@color/colorHeaderSmallText"
                    app:srcCompat="@drawable/ic_sf" />

                <TextView
                    android:id="@+id/summary_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semi"
                    android:textSize="@dimen/txt_16"
                    android:text="@string/placeholder"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorHeaderSmallText" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
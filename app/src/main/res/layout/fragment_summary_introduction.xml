<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:id="@+id/lyt_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_2"
            android:layout_marginLeft="@dimen/spacing_2"
            android:layout_marginRight="@dimen/spacing_2"
            android:layout_marginTop="@dimen/spacing_2"
            android:visibility="visible"
            app:cardCornerRadius="@dimen/spacing_2"
            app:cardElevation="@dimen/spacing_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_56"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/spacing_15"
                        android:layout_height="0dp" />

                    <ImageView
                        android:layout_width="@dimen/spacing_40"
                        android:layout_height="@dimen/spacing_40"
                        android:layout_marginEnd="@dimen/spacing_5"
                        android:layout_marginRight="@dimen/spacing_5"
                        app:srcCompat="@drawable/ic_summary_introduction" />

                    <TextView
                        android:id="@+id/summary_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:text="@string/summary_introduction"
                        android:fontFamily="@font/semi"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorHeaderText"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_10" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_5"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/spacing_15"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/summary_introduction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:lineSpacingExtra="@dimen/spacing_2"
                        android:text="@string/long_placeholder"
                        android:fontFamily="@font/regular"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/grey_80"/>

                    <View
                        android:layout_width="@dimen/spacing_15"
                        android:layout_height="0dp" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_10" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
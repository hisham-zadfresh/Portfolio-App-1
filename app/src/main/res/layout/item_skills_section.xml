<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:layout_marginLeft="@dimen/spacing_20"
    android:layout_marginRight="@dimen/spacing_20"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/skill_section_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/semi"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@color/grey_80" />
    </LinearLayout>

    // Spacing

    <View
        android:layout_width="@dimen/spacing_0"
        android:layout_height="@dimen/spacing_5" />

    // Dashline

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_2"
        android:background="@drawable/ic_dash_line" />

</LinearLayout>
